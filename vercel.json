{
  "version": 3,
  "builds": [
    {
      "src": "server",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "client",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    }
  ]
}
